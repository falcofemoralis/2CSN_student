<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/design_v2_background"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_background"
        android:layout_weight="0.1"
        android:orientation="vertical">

       <TextView
           android:layout_width="300dp"
           android:layout_height="48dp"
           android:layout_gravity="center"
           android:layout_weight="0.8"
           android:gravity="center"
           android:text="@string/course_2"
           android:textColor="@color/white"
           android:textSize="25dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_main_tv_timer_text"
                    android:layout_width="187dp"
                    android:layout_height="48dp"
                    android:layout_margin="15dp"
                    android:textAlignment="center"
                    android:background="@drawable/text_style_2"
                    android:gravity="center"
                    android:text="@string/timeUntil"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_main_tv_timerCounter"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/text_style_2"
                    android:textSize="18sp" />

            </LinearLayout>
     </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/activity_main_bt_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="@drawable/design_v2_button"
                android:drawableTop="@drawable/ic_school_black_24dp"
                android:onClick="OnClick"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:stateListAnimator="@null"
                android:text="Subjects"
                android:textColor="@color/white">

            </Button>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/activity_main_bt_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:background="@drawable/design_v2_button"
                android:drawableTop="@drawable/ic_group_black_24dp"
                android:onClick="OnClick"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:stateListAnimator="@null"
                android:text="@string/Rating"
                android:textColor="@color/white">

            </Button>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/activity_main_bt_lessonsShedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:background="@drawable/design_v2_button"
                android:drawableTop="@drawable/ic_school_black_24dp"
                android:onClick="OnClick"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:stateListAnimator="@null"
                android:text="@string/Lessons_schedule"
                android:textColor="@color/white">

            </Button>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/activity_main_bt_teachersSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/design_v2_button"
                android:drawableTop="@drawable/ic_school_black_24dp"
                android:onClick="OnClick"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:stateListAnimator="@null"
                android:text="@string/Teachers_schedule"
                android:textColor="@color/white"></Button>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/activity_main_bt_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:background="@drawable/design_v2_button"
                android:drawableTop="@drawable/ic_settings_black_24dp"
                android:onClick="OnClick"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:stateListAnimator="@null"
                android:text="@string/title_activity_settings"
                android:textColor="@color/white">

            </Button>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_weight="0.25" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
