<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/Base_settings">

        <EditTextPreference
            app:key="nickname"
            app:title="Nickname"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="knt_528"
            app:entries="@array/group_entries"
            app:entryValues="@array/group_values"
            app:key="group"
            app:title="@string/group_title"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="is_registered"
            android:title="Вийти з акаунта" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Головний екран">

        <SwitchPreference
            android:defaultValue="true"
            android:key="timer_setting"
            android:title="Таймер" />
    </PreferenceCategory>

</PreferenceScreen>
