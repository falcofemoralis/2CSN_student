<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_main_background"
    android:orientation="vertical"
    android:layout_weight="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">

        <TextView
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@color/background"
            android:text="@string/course_2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/btn_id"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/background"
            android:onClick="OnClickSettings"
            android:src="@drawable/ic_settings_black_24dp" />

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07">

        <TextView
            android:id="@+id/timeUntil"
            android:layout_width="187dp"
            android:layout_height="48dp"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:background="@drawable/text_style"
            android:gravity="center"
            android:text="До кінця пари:"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/text_style"
            android:textSize="18sp" />

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search"
        android:layout_margin="15dp"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:textSize="20sp" >

    </Button>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4" />

     <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />


        <Button
            android:id="@+id/LS"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.225"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_school_black_24dp"
            android:onClick="OnClickLessons"
            android:text="Розклад">

        </Button>

        <Button
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.225"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_school_black_24dp"
            android:onClick="OnClickRating"
            android:text="РЕЙТИНГ">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.225"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_school_black_24dp"
            android:text="Розклад">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.225"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_school_black_24dp"
            android:text="Розклад">
        </Button>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />
    </TableRow>


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0." />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_style"
        android:layout_margin="15dp"
        android:layout_weight="0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="  Дисципліни" />

        <Button
            android:id="@+id/Alg"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/text_style_2"
            android:textColor="@color/white"
            android:onClick="OnClick"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:text="@string/Alg_and_metod" />

        <Button
            android:id="@+id/Arch"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/text_style_2"
            android:textColor="@color/white"
            android:onClick="OnClick"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:text="@string/Arch_Comp" />

        <Button
            android:id="@+id/CS"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/text_style_2"
            android:textColor="@color/white"
            android:onClick="OnClick"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:text="@string/CompScheme" />

        <Button
            android:id="@+id/OBD"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/text_style_2"
            android:textColor="@color/white"
            android:onClick="OnClick"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:text="@string/DataBase" />

        <Button
            android:id="@+id/OBG"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/text_style_2"
            android:textColor="@color/white"
            android:onClick="OnClick"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:text="@string/OBG" />

        <Button
            android:id="@+id/SMP"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/text_style_2"
            android:textColor="@color/white"
            android:onClick="OnClick"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:text="@string/S_metod_prog" />

    </TableLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.75"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/mainColor2"
            android:clickable="false"
            android:textColor="@color/white"
            android:text="@string/Overall" />

        <Button
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/mainColor2"
            android:clickable="false"
            android:textColor="@color/white"
            android:text="0 %" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0." />

</LinearLayout>

