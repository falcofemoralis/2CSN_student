<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.BSLCommunity.CSN_student">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Objects.App">

        <service android:name=".Services.DownloadService"/>
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/MainActivityActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.RegistrationActivity"
            android:theme="@style/TransparentActionBar" />
        <activity
            android:name=".Activities.LoginActivity"
            android:theme="@style/TransparentActionBar" />
        <activity
            android:name=".Activities.Schedule.ScheduleActivity"
            android:theme="@style/TransparentActionBar" />
        <activity
            android:name=".Activities.SubjectInfoActivity"
            android:theme="@style/SubjectInfoActivityActionBar" />
        <activity
            android:name=".Activities.RatingActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.RatingUsersListActivity"
            android:theme="@style/SubjectInfoActivityActionBar" />
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/TransparentActionBar" />
        <activity
            android:name=".Activities.SubjectListActivity"
            android:theme="@style/SubjectListsActivityActionBar" />
        <activity
            android:name=".Activities.SubjectInfoFullStatisticActivity"
            android:theme="@style/FullStatisticActivityActionBar" />
        <activity
            android:name=".Activities.AuditoriumActivity"
            android:label="Auditorium search"
            android:theme="@style/ActionBar" />
    </application>

</manifest>