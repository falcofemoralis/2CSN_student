<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/StBar</item>
        <item name="colorAccent">@color/mainColor2</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">#00000000</item>
    </style>

    <style name="NoActionBar" parent="@style/AppTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="MainActivityActionBar" parent="@style/AppTheme">
        <item name="colorPrimary">@color/new_dark_color</item>
        <item name="colorPrimaryDark">@color/new_dark_color</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ScheduleActivityActionBar" parent="@style/AppTheme">
        <item name="colorPrimary">@color/StBar</item>
        <item name="colorPrimaryDark">@color/StBar</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="SubjectListsActivityActionBar" parent="@style/AppTheme">
        <item name="colorPrimary">#198A9C</item>
        <item name="colorPrimaryDark">#198A9C</item>
        <item name="android:navigationBarColor">#CC363C</item>
    </style>

    <style name="SubjectInfoActivityActionBar" parent="@style/AppTheme">
        <item name="colorPrimary">@color/new_dark_color</item>
        <item name="colorPrimaryDark">@color/new_dark_color</item>
        <item name="android:navigationBarColor">#CC363C</item>
    </style>

    <style name="TransparentActionBar" parent="@style/AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <style name="TransparentStatusBar" parent="@style/AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TransparentNavigationBar" parent="@style/AppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
