<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.BSLCommunity.CSN_student">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.Main"
            android:theme="@style/MainActivityActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.Registration"
            android:theme="@style/NoActionBar"></activity>
        <activity
            android:name=".Activities.Login"
            android:theme="@style/NoActionBar"></activity>
        <activity
            android:name=".Activities.Schedule.Schedule"
            android:theme="@style/NoActionBar"></activity>
        <activity
            android:name=".Activities.SubjectInfo"
            android:theme="@style/NoActionBar"></activity>
        <activity
            android:name=".Activities.Rating"
            android:theme="@style/NoActionBar"></activity>
        <activity
            android:name=".Activities.Settings"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".Activities.SubjectList"
            android:theme="@style/NoActionBar"></activity>
    </application>

</manifest>